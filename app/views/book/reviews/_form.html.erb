<%= form_for @review do |f| %>
  <%= f.label :book_name %>
  <%= f.text_field :book_name %>

  <%= f.label :review %>
  <%= f.text_area :review, class: 'tinymce', rows: 30 %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :tag_list, "Categories(separated by commas)" %>
  <%= f.text_field :tag_list %>

  <%= f.label :score %>
  <%= select :book_review, :score, options_for_select(@review.scores_available, selected: @review.score) %>

  <%= f.submit "Submit" %>
<% end %>
