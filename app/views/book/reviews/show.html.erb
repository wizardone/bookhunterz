<%= link_to 'Edit', edit_book_review_path(@review) %>
<h1><%=@review.book_name %></h1>
<br />
<%= sanitize @review.review %>
<div id="rating">
  Резил:
  <div id="star"></div>
</div><br />

<hr />

<div>
  <p>Коментирай</p>
  <%= form_for [@review, Comment.new] do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 10, cols: 40 %>
    <br />
    <%= f.submit "Коментирай си" %>
  <% end %>
</div>

<script>
  $('#star').raty({
    number: 10,
    readOnly: true,
    score: <%=@review.score %>,
    path: '/assets'
  });
</script>
