<!DOCTYPE html>
<html>
<head>
  <title>Bookhunterz</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar :fixed => :top  do %>
  <% menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Новини", book_news_index_path %>
        <%= menu_item "Ревюта", book_reviews_path %>
      <% end %>
    <% end %>
    <div class="container" style="margin-top: 40px;">
      <p class="navbar-text pull-right" >
        <% if is_logged_in? %>
          <p>Hello, <%=current_user.email%></p>
          <%= link_to 'Log out', logout_session_path, method: :delete %>
        <% end %>
      </p>
    <div>
      <% if flash[:notice] %>
        <p class="alert"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:error] %>
        <p class="alert alert-error"><%= flash[:error] %></p>
      <% end %>
    </div>

    <div id="header-image">
      <%=image_tag(header_image) %>
    </div>
    
<%= yield %>
</div>
</body>
</html>
